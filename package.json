{
  "name": "project-status-testing",
  "version": "1.0.0",
  "description": "Testing harness for Project Status web application",
  "type": "module",
  "scripts": {
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:e2e": "cd e2e-tests && playwright test",
    "test:e2e:headed": "cd e2e-tests && playwright test --headed",
    "test:e2e:ui": "cd e2e-tests && playwright test --ui",
    "test:e2e:debug": "cd e2e-tests && PWDEBUG=1 playwright test --headed --project=chromium"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "@vitest/ui": "^1.0.0",
    "@playwright/test": "^1.47.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
}
